<?xml version="1.0"?>

<labwc_config>

  <theme>
    <name>labwc</name>
    <cornerRadius>0</cornerRadius>
    <icon>Papirus-Light</icon>
    <font name="Iosevka NF" size="10" />
  </theme>
  
  <desktops number="4">
  	<prefix>></prefix>
  </desktops>
  
  <windowSwitcher allWorkspaces="yes">
  	<fields>
  		<field content="workspace" width="15%" />
  		<field content="icon" width="10%" />
    	<field content="desktop_entry_name" width="75%" />
  	</fields>
  </windowSwitcher>

  <keyboard>
    <default />
    <keybind key="W-Return">
      <action name="Execute" command="foot" />
    </keybind>
    <keybind key="W-d">
      <action name="Execute" command="wofi -S drun -W 300 -I -i" />
    </keybind>
    <keybind key="W-e">
      <action name="Execute" command="pcmanfm" />
    </keybind>
    <keybind key="W-l">
      <action name="Execute" command="swaylock" />
    </keybind>
    <keybind key="W-q">
      <action name="Close" />
    </keybind>
    <keybind key="W-S-r">
      <action name="Reconfigure" />
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop" to="1" />
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop" to="2" />
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop" to="3" />
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop" to="4" />
    </keybind>
    <keybind key="W-S-1">
      <action name="SendToDesktop" to="1" />
    </keybind>
    <keybind key="W-S-2">
      <action name="SendToDesktop" to="2" />
    </keybind>
    <keybind key="W-S-3">
      <action name="SendToDesktop" to="3" />
    </keybind>
    <keybind key="W-S-4">
      <action name="SendToDesktop" to="4" />
    </keybind>
  </keyboard>

  <mouse>
    <default />
    <context name="Root">
      <mousebind button="Left" action="Press">
        <action name="None" />
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="root-menu" />
      </mousebind>
    </context>
  </mouse>

</labwc_config>

